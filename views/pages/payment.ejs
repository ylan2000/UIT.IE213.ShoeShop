                        <span class="text-right">
                            $ <span>0</span>
                        </span>
                    </li>
                    <li class="divider"></li>
                    <li  class="listgroup__item">
                        <span class="text-left title">Total</span>
                        <span class="text-right cost">
                            <%= total%>
                        </span>
                    </li>
                    <li class="listgroup__item">
                        <button class="button">Order Success</button>
                    </li>
                </ul>
            </div>
