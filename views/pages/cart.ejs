<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); -%>
  </head>
  <body>
    <%- include('../partials/nav'); -%>
    <form action="/payment" method="post" class="cart">
      <div class="container">
        <h3 class="cart__title">Cart</h3>
        <% if (products) { %>
        <div class="cart__page">
          <table class="cart__table">
            <tr>
              <th class="cart__header">Product</th>
              <th class="cart__header">Quantity</th>
              <th class="cart__header">Subtotal</th>
              <th class="cart__header"></th>
            </tr>
            <% products.forEach(product => { %>
            <tr>
              <td>
                <div class="cart__info">
                  <img src="<%= product.item.coverImagePath %>" alt="<%= product.item.name %>" />
                  <div>
                    <p class="cart__product-name">
                      <%= product.item.name %>
                    </p>
                    <small
                      >Price:
                      <span class="cart__product-price">$<%= product.item.price %></span></small
                    >
                  </div>
                </div>
              </td>
              <td><input type="number" value="<%= product.qty; %>" min="1" max="999" /></td>
              <td>$<%= product.price %></td>
              <td><i class="fas fa-trash-alt icon-trash"></i></td>
            </tr>
            <% }); %>
          </table>
        </div>
      </div>

      <div class="container cart__bottom">
        <div class="cart__total">
          <table>
            <tr class="cart__total-resut">
              <td>Total</td>
              <td>
                <input type="text" id="cart__totalMoney" name="cart__totalMoney" value="$<%= totalPrice %>">
              </td>
            </tr>
          </table>
        </div>
          <input class="cart__OrdBtn" type="submit" value="Proceed to checkout" />
          <% } else { %>
            <p>no products</p>
            <% } %>
      </div>
    </form>
    <%- include('../partials/footer'); -%> <%-
    include('../partials/script-line'); -%>
  </body>
</html>
